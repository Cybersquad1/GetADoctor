@model GetADoctor.Web.Areas.Admin.Models.StateViewModel
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="top-bottom-padding">
        <h2>Add A State</h2>
        <hr />
    </div>
    @using (Html.BeginForm("Create", "States", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.StateName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StateName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-12">
            <input type="submit" class="btn btn-lg btn-primary col-md-2 pull-right" value="Add" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-lg btn-warning col-md-offset-2 pull-right", @style = "margin-right:5px;" })
        </div>
    }
</div>

